<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newera.marathon.service.system.mapper.SysUserRoleMapper">
    <select id="queryRoleListByUserId" parameterType="java.lang.Integer"
            resultType="com.newera.marathon.service.system.entity.SysRole">
        select r.id,r.role_name roleName
        from t_sys_user_role ur
        left join t_sys_role r on ur.role_id = r.id
        where ur.user_id = #{value}
    </select>
</mapper>
