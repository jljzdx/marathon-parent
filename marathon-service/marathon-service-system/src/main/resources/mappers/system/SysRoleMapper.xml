<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newera.marathon.service.system.mapper.SysRoleMapper">
    <sql id="SysRoleWhere">
        <if test="null != requestDTO.roleName and requestDTO.roleName != ''">
            and role_name LIKE CONCAT('%', '${requestDTO.roleName}', '%')
        </if>
    </sql>
    <select id="querySysRolePage" resultType="com.newera.marathon.dto.system.inquiry.XfaceSysRoleInquiryPageResponseSubDTO">
        select
        id,
        role_name roleName,
        remark,
        status,
        gmt_create gmtCreate
        from t_sys_role
        <where>
            <include refid="SysRoleWhere"></include>
        </where>
    </select>
</mapper>
